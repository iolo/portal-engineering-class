<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.jejuuniv.mapper.TwitMapper">
	<select id="findAll" resultType="kr.ac.jejuuniv.model.TwitModel">
		SELECT * FROM twit
	</select>
<!--
 	<select id="findAllOrderByIdDesc" resultType="kr.ac.jejuuniv.model.TwitModel">
		SELECT * FROM
		member ORDER BY id DESC
	</select>
 -->	
	<insert id="insertTwit" parameterType="kr.ac.jejuuniv.model.TwitModel">
		insert into twit (writer, twit_text, date)
		values (#{writer},#{twit_text},#{date})
	</insert>	
</mapper>