<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.ac.jejuuniv.twitter.repository.UserRepository">
	<!-- 사용자가입 -->
	<insert id="addUser" parameterType="kr.ac.jejuuniv.twitter.model.UserModel">
		Insert into user values(#{id},#{password},#{name},#{profile})
	</insert>
	
	<!--로그인 처리  -->
	<select id="checkUser" resultType="kr.ac.jejuuniv.twitter.model.UserModel">
		Select id, name from user where id=#{id} and password=#{password}
	</select>
	
	<!-- 모든 사용자 가지고 오기 -->
	<select id="getAllUser" resultType="kr.ac.jejuuniv.twitter.model.UserModel">
		Select id name from user 
	</select>
	
	<!-- 탈퇴?? -->
	<delete id="delUser" parameterType="String">
		 delete from user where id=#{id}
	</delete>
</mapper>