<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.ac.jejuuniv.Repository.TweetRepository">

	<select id="findTweetByUserNum" parameterType="int" resultType="kr.ac.jejuuniv.Model.Tweet">
		select * from tweet where userNum = #{userNum}
	</select>

	<select id="getAllTweet" resultType="kr.ac.jejuuniv.Model.Tweet">
		select * from tweet
	</select>

	<insert id="insert" parameterType="kr.ac.jejuuniv.Model.Tweet">
		insert into tweet(userNum, message, date)
		values(#{userNum}, #{message}, #{date})
	</insert>

	<delete id="delete">
		delete from tweet
		where seq = #{seq}
	</delete>
</mapper>