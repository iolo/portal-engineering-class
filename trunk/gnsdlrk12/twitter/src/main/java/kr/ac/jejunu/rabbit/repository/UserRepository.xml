<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.jejunu.rabbit.repository.UserRepository">
	<sql id="selectUser">userid, name, password</sql>
	<!-- <select id="findAll" resultType="kr.ac.jejunu.rabbit.model.User" >
		select 
		<include refid="selectUser"/>
		from userinfo
	</select> -->
	<select id="findById" resultType="kr.ac.jejunu.rabbit.model.User">
		select 
		<include refid="selectUser"/>
		from userinfo where id = #{userid}
	</select>
	
	<insert id="insert" parameterType="kr.ac.jejunu.rabbit.model.User">
		insert into userinfo(userid, name, password) values(#{userid}, #{name}, #{password})
	</insert>
