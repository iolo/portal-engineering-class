<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.ac.jejuuniv.mapper.SsiggleMapper">
	<select id="selectSsiggleById" parameterType="java.lang.String"
		resultType="kr.ac.jejuuniv.model.Ssiggle">
		select * from ssiggle where id=#{id}
	</select>

	<delete id="deleteSsiggleById" parameterType="java.lang.String">
		delete from ssiggle
		where id=#{id}
	</delete>

	<insert id="insertSsiggle" parameterType="kr.ac.jejuuniv.model.Ssiggle">
		insert ssiggle(text, user) values (#{text}, #{user})
	</insert>

	<update id="updateSsiggle" parameterType="kr.ac.jejuuniv.model.Ssiggle">
		update ssiggle set text = #{text} where id=#{id}
	</update>

	<select id="selectSsiggleListByUserIdDescTime" parameterType="java.lang.String" resultType="kr.ac.jejuuniv.model.Ssiggle">
		select * from ssiggle order by time desc
	</select>
</mapper>