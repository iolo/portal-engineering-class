<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
			<property name="driverClass" value="com.mysql.jdbc.Driver" />
			<property name="url" value="jdbc:mysql://localhost/comment?useUnicode=true&amp;characterEncoding=utf8" />
			<property name="username" value="juyoung" />
			<property name="password" value="comment" />
		</bean>
		
		<bean id="sqlSesstionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
			<property name="dataSource" ref="dataSource" />
		</bean>
		
		<bean id="userMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
			<property name="mapperInterface" value="kr.ac.jejunu.repositry.SqlMapper" />
			<property name="sqlSessionFactory" ref="sqlSesstionFactory" />
		</bean>
</beans>
