<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rillflow.memo.repository.ReplyDao">
	<insert id="insertReply" parameterType="com.rillflow.memo.model.Reply">
		INSERT INTO REPLY (id, contents, insertDate)
		VALUES (#{id}, #{contents}, now())
	</insert>
	
	<delete id="deleteReply" parameterType="int">
		DELETE FROM REPLY WHERE no = #{no}
	</delete>
	
	<select id="selectReplyList" resultType="com.rillflow.memo.model.Reply">
		SELECT A.*, B.* FROM USER A, REPLY B WHERE A.id = B.id
		ORDER BY B.insertDate DESC
	</select>
	
	<select id="selectReplyByNo" parameterType="int" resultType="com.rillflow.memo.model.Reply">
		SELECT * FROM REPLY WHERE no = #{no}
	</select>
</mapper>